<div class="card container-sm mb-2">

<ul class="mt-2 nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="baskets-tab" data-bs-toggle="tab" data-bs-target="#baskets" type="button" role="tab" aria-controls="baskets" aria-selected="true">Baskets</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="tokens-tab" data-bs-toggle="tab" data-bs-target="#tokens" type="button" role="tab" aria-controls="tokens" aria-selected="false">Tokens</button>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="baskets" role="tabpanel" aria-labelledby="baskets-tab">
    <table class="table">
      <thead>
        <tr>
          <th class="w-auto" scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col"><small>*Ranked by Most VRSC in Reserves</small></th>
        </tr>
      </thead>
      <tbody>
      {% for i in vars.baskets %}
        {% assign basket = i %}
        {% include 'basketsrow', id:forloop.index %}
      {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="tab-pane fade" id="tokens" role="tabpanel" aria-labelledby="tokens-tab">
    <table class="table">
      <thead>
        <tr>
          <th class="w-auto" scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col"> </th>
        </tr>
      </thead>
      <tbody>
      {% for i in vars.currencies %}
        {% assign currency = i[1] %}
        {% include 'currenciesrow', id:forloop.index %}
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>
